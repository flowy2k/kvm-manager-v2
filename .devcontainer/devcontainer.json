{
  "name": "Python + uv + Node.js Dev (Hot Reload)",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "github.copilot"
      ],
      "settings": {
        "python.defaultInterpreterPath": ".venv/bin/python",
        "editor.formatOnSave": true
      }
    }
  },
  "postCreateCommand": "uv venv && uv add watchfiles && npm install --save-dev nodemon && uv sync"
}
